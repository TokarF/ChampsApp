<?php function chanmpionshipPercantage($lejatszottMeccsek, $osszesMeccs)
{
    $percentage = ($lejatszottMeccsek / $osszesMeccs) * 100;
    switch ($percentage) {

        case $percentage > 50 && $percentage < 75:
            echo "bg-warning";
            break;
        case $percentage > 75:
            echo "bg-danger";
            break;
        default:
            echo "bg-success";
            break;
    };
}
